<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Notes</title>
</head>
<body>
    <% const d = new Date();  %>
    <% notes.forEach(note => { %>
        <hr> 
        <div class="container-fluid ps-3 ">
            <h4> Chapter <%= note.chapter %>, page <%= note.page %></h4> <br>
            <p><%= note.note %></p> <br>
            <p><%= note.date %></p>
            </div><br> 
            
            <% }) %> 
            <hr> <br>
            <form action="/notes" method="post">
                <input type="text" name="note"  placeholder="New Note" required> <br>
                <input type="number" name="chapter" placeholder="Chapter" required> <br>
                <input type="number" name="page" placeholder="page" required>
                <input type="hidden" name="date" value="<%= d.getDate(); %>/<%= d.getMonth()+1; %>/<%= d.getFullYear();%>::<%= d.getHours(); %>:<%= d.getMinutes(); %>:<%= d.getSeconds() %>">
                <input type="hidden" name="book_id" value="<%= id %>">
                <input type="submit" name="" placeholder="Submit">
            </form>
</body>
</html>